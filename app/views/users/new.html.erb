<div class="row margin-small">	 
	<div class="col-md-4 col-md-push-4">
		<div class="page-header c-align">
			<h1>Get Started</h1>
		</div>
	</div>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>
  
  <div class="form-group"> 
	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= text_field_tag :first_name, nil, placeholder: 'First Name', class: 'form-control'%>
		</div>
    	</div>

	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= text_field_tag :last_name, nil, placeholder: 'Last Name', class: 'form-control' %>
		</div>
    	</div>

	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= text_field_tag :email, nil, placeholder: 'john@gmail.com', class: 'form-control' %>
		</div>
    	</div>

	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= text_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
		</div>
    	</div>

	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= text_field_tag :password_confirm, nil, placeholder: 'Confirm Password', class: 'form-control' %>
		</div>
    	</div>

	<div class="row margin-small">	 
		<div class="col-md-4 col-md-push-4">
			<%= submit_tag "Register Account", class: 'btn btn-info btn-large f-right' %>
		</div>
	</div>

  </div>

<% end %>
