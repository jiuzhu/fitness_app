<h1>New Challenge</h1>

<%= form_tag(challenges_url, method: 'post') do %>
  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :data_type_id %><br />
    <%= number_field_tag :data_type_id %>
  </div>

  <div>
    <%= label_tag :value %><br />
    <%= text_field_tag :value %>
  </div>

  <div>
    <%= submit_tag "Create Challenge" %>
  </div>
<% end %>
