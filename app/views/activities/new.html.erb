<h1>New Activity</h1>

<%= form_tag(activities_url, method: 'post') do %>
  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

  <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date %>
  </div>

  <div>
    <%= label_tag :steps %><br />
    <%= number_field_tag :steps %>
  </div>

  <div>
    <%= label_tag :miles %><br />
    <%= number_field_tag :miles %>
  </div>

  <div>
    <%= label_tag :calories %><br />
    <%= number_field_tag :calories %>
  </div>

  <div>
    <%= submit_tag "Create Activity" %>
  </div>
<% end %>
